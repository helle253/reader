{
  "manifest_version": 3,
  "name": "Narrator",
  "version": "1.0",
  "description": "Ever wanted to have a longform article read back to you? You're in luck!",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": "icon128.png"
  },
  "background": {
    "service_worker": "worker.js"    
  },
  "permissions": ["contextMenus"]
}